<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. This theme is the new foundation, WITHOUT a default ActionBar. -->
    <style name="Theme.MaseteroInteligente" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/button_green</item>
        <item name="colorSecondaryVariant">@color/secondary_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_green_dark</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_cream</item>

        <!-- Font family -->
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- This now simply inherits from the main theme, which is already NoActionBar. It's kept for compatibility. -->
    <style name="Theme.MaseteroInteligente.NoActionBar" parent="Theme.MaseteroInteligente" />

    <!-- Splash Screen Theme -->
    <style name="Theme.MaseteroInteligente.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/primary_green</item>
    </style>

    <!-- Button Styles -->
    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/button_green</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="WhiteButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="RedButton" parent="GreenButton">
        <item name="backgroundTint">@color/alert_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/ic_launcher_background</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleTextStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Card Style -->
    <style name="PlantCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/secondary_green</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle">
        <item name="android:background">@color/light_green</item>
        <item name="itemIconTint">@color/primary_green_dark</item>
        <item name="itemTextColor">@color/primary_green_dark</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Botón contorno (por si luego lo usas) -->
    <style name="Widget.MI.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/mi_stroke</item>
        <item name="android:textColor">@color/mi_text_dark</item>
    </style>


    <!-- TextInput redondeado y sin bordes fuertes -->
    <style name="Widget.MI.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Botón base (lo sobreescribimos con backgroundTint en el XML) -->
    <style name="Widget.MI.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
