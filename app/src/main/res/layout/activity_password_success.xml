<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background_light">

    <!-- Animación de éxito (círculo verde con check) -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_circle"
        android:tint="@color/success_green"
        android:layout_marginBottom="32dp"
        android:contentDescription="Éxito" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Contraseña restablecida!"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <!-- Descripción -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu contraseña ha sido actualizada exitosamente. Ya puedes iniciar sesión con tu nueva contraseña."
        android:textSize="15sp"
        android:textColor="@color/text_secondary"
        android:textAlignment="center"
        android:layout_marginBottom="48dp"
        android:paddingHorizontal="24dp"
        android:lineSpacingExtra="4dp" />

    <!-- Botón de ir al login -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Iniciar sesión"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_green"
        app:cornerRadius="12dp" />

</LinearLayout>
