<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_primary"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Volver"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Alertas"
            android:textColor="@color/dark_green"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Centro de alertas label -->
    <TextView
        android:id="@+id/tvCentroAlertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutHeader"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="Centro de alertas"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- RecyclerView de alertas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAlerts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvCentroAlertas"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false" />

    <!-- Estado vacío -->
    <LinearLayout
        android:id="@+id/tvEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_no_alerts"
            android:alpha="0.3"
            android:contentDescription="Sin alertas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No hay alertas"
            android:textColor="@color/gray_text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Todas tus plantas están en perfecto estado"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>
