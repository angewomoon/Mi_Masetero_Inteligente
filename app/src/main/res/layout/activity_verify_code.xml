<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Botón de regreso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Volver"
                android:tint="@color/primary_green" />
        </LinearLayout>

        <!-- Ícono de email -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_email"
            android:tint="@color/primary_green"
            android:layout_marginBottom="24dp"
            android:contentDescription="Código de verificación" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verificar código"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Descripción con email -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hemos enviado un código de 6 dígitos a tu correo"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"
            android:paddingHorizontal="16dp" />

        <!-- Contenedor de campos de código (6 dígitos) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etCode1"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_code_input"
                android:textColor="@color/text_primary"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/etCode2"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_code_input"
                android:textColor="@color/text_primary"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/etCode3"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_code_input"
                android:textColor="@color/text_primary"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/etCode4"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_code_input"
                android:textColor="@color/text_primary"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/etCode5"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_code_input"
                android:textColor="@color/text_primary"
                android:layout_margin="4dp" />

            <EditText
                android:id="@+id/etCode6"
                android:layout_width="45dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_code_input"
                android:textColor="@color/text_primary"
                android:layout_margin="4dp" />

        </LinearLayout>

        <!-- Botón de verificar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Verificar código"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_green"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Texto de reenviar código -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿No recibiste el código? "
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvResendCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reenviar"
                android:textSize="14sp"
                android:textColor="@color/primary_green"
                android:textStyle="bold"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
