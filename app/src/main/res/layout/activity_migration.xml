<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/migration_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/migration_description"
            android:textSize="14sp"
            android:textColor="#7F8C8D"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:max="100"
            android:progress="0" />

        <!-- TextView para estado -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/migration_ready"
            android:textSize="14sp"
            android:textColor="#27AE60"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Card: Estadísticas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/migration_stats_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Estadísticas SQLite -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/migration_sqlite_label"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#34495E"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvSqliteUsers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/migration_users_count"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvSqlitePlants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/migration_plants_count"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvSqliteSensors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/migration_sensors_count"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvSqliteAlerts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/migration_alerts_count"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />
                    </LinearLayout>

                    <!-- Estadísticas Firebase -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/migration_firebase_label"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#34495E"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvFirebaseUsers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/migration_users_count"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvFirebasePlants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/migration_plants_count"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvFirebaseSensors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/migration_sensors_count"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvFirebaseAlerts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/migration_alerts_count"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnRefreshStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/migration_refresh_stats"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#3498DB"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Exportar a Firebase -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/migration_export_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnExportAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/migration_export_all"
                    android:backgroundTint="#27AE60"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnExportUsers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/migration_export_users"
                        android:backgroundTint="#16A085"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnExportPlants"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/migration_export_plants"
                        android:backgroundTint="#16A085"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="4dp"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnExportSensors"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/migration_export_sensors"
                        android:backgroundTint="#16A085"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnExportAlerts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/migration_export_alerts"
                        android:backgroundTint="#16A085"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="4dp"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Importar desde Firebase -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/migration_import_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnImportAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/migration_import_all"
                    android:backgroundTint="#E67E22"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnImportUsers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/migration_import_users"
                        android:backgroundTint="#D68910"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnImportPlants"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/migration_import_plants"
                        android:backgroundTint="#D68910"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="4dp"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnImportSensors"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/migration_import_sensors"
                        android:backgroundTint="#D68910"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="4dp"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnImportAlerts"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/migration_import_alerts"
                        android:backgroundTint="#D68910"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="4dp"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Opciones Avanzadas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/migration_advanced_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnClearDatabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/migration_clear_database"
                    android:backgroundTint="#E74C3C"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Logs -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/migration_logs_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#ECEFF1"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/tvLogs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/migration_logs_empty"
                        android:textSize="12sp"
                        android:textColor="#34495E"
                        android:fontFamily="monospace" />
                </ScrollView>

                <Button
                    android:id="@+id/btnClearLogs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/migration_clear_logs"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#95A5A6"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
