<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con tÃ­tulo -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C8E6C9"
            android:padding="16dp">

            <!-- BotÃ³n de regreso -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Volver"
                android:tint="@android:color/black" />

            <!-- TÃ­tulo de la planta -->
            <TextView
                android:id="@+id/tvPlantTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Mi Masetero 1"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- BotÃ³n de editar -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Editar"
                android:tint="@android:color/black" />
        </RelativeLayout>

        <!-- Imagen de la planta -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/white"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivPlantImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_gallery"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                android:contentDescription="Imagen de la planta" />
        </FrameLayout>

        <!-- Nombre de la planta -->
        <TextView
            android:id="@+id/tvPlantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nombre planta"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <!-- Nombre cientÃ­fico -->
        <TextView
            android:id="@+id/tvScientificName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nombre CientÃ­fico"
            android:textSize="14sp"
            android:textColor="#757575"
            android:paddingBottom="16dp" />

        <!-- TÃ­tulo de estado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Estado de la planta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Grid de sensores -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false">

            <!-- Humedad del Suelo -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:background="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’§"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humedad\nSuelo"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:gravity="center"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/tvSoilHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/tvSoilHumidityStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ã“ptimo"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:paddingTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nivel de Luz -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:background="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜€ï¸"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="Nivel de Luz"
                        android:textColor="#F57C00"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUvLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="70%"
                        android:textColor="#F57C00"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUvLevelStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="Moderado"
                        android:textColor="#757575"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nivel de Agua -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:background="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸª£"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel de\nAgua"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0277BD"
                        android:gravity="center"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/tvWaterLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#0277BD"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/tvWaterLevelStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suficiente"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:paddingTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Temperatura -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:background="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¡"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:text="Temperatura"
                        android:textColor="#D32F2F"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:text="22Â°C"
                        android:textColor="#D32F2F"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTemperatureStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:text="Ideal"
                        android:textColor="#757575"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Humedad ambiente -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:background="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¨"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humedad\nambiente"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#5E35B1"
                        android:gravity="center"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/tvAmbientHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#5E35B1"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/tvAmbientHumidityStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adecuado"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:paddingTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Posibles plagas -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:background="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posibles\nplaga"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#8E24AA"
                        android:gravity="center"
                        android:paddingTop="8dp" />

                    <TextView
                        android:id="@+id/tvPestCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#8E24AA"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/tvPestStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detectadas"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:paddingTop="2dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Ãšltima actualizaciÃ³n -->
        <TextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ãšltima actualizaciÃ³n: Hace 30s"
            android:textSize="12sp"
            android:textColor="#757575"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

    </LinearLayout>

</ScrollView>