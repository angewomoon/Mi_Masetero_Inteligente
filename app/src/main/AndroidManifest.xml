<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.devst.mimaseterointeligente">

    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <!-- Declarar intents para visibilidad de paquetes (Android 11+) -->
    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
        <intent>
            <action android:name="android.intent.action.PICK" />
            <data android:mimeType="image/*" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MaseteroInteligente"
        android:usesCleartextTraffic="true">

        <!-- Actividad de Splash/Inicio -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MaseteroInteligente.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividades de Autenticación -->
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.MaseteroInteligente.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".activities.RegisterActivity"
            android:theme="@style/Theme.MaseteroInteligente.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:theme="@style/Theme.MaseteroInteligente.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".activities.VerifyCodeActivity"
            android:theme="@style/Theme.MaseteroInteligente.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".activities.ResetPasswordActivity"
            android:theme="@style/Theme.MaseteroInteligente.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".activities.PasswordSuccessActivity"
            android:theme="@style/Theme.MaseteroInteligente.NoActionBar" />

        <!-- Actividades principales -->
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.MaseteroInteligente.NoActionBar" />

        <activity
            android:name=".activities.AddPlantActivity"
            android:theme="@style/Theme.MaseteroInteligente" />

        <activity
            android:name=".activities.PlantDashboardActivity"
            android:theme="@style/Theme.MaseteroInteligente.NoActionBar" />

        <activity
            android:name=".activities.EditPlantActivity"
            android:theme="@style/Theme.MaseteroInteligente" />

        <activity
            android:name=".activities.AlertsActivity"
            android:theme="@style/Theme.MaseteroInteligente" />

        <activity
            android:name=".activities.ProfileActivity"
            android:theme="@style/Theme.MaseteroInteligente" />

        <activity
            android:name=".activities.EditProfileActivity"
            android:theme="@style/Theme.MaseteroInteligente.NoActionBar" /> <!-- CORREGIDO -->

        <!-- Configuración de Google Sign-In -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service
            android:name=".services.AlertService"
            android:exported="false" />

        <service
            android:name=".services.SensorMonitorService"
            android:exported="false" />

        <!-- ✨ NUEVO: FileProvider para acceso seguro a archivos (cámara e imágenes) ✨ -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.devst.mimaseterointeligente.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
